<% provide(:title, "プロフィール編集") %>
<div id="fh5co-portfolio">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
        <div class="gravatar_edit">
          <%= gravatar_for(@user, size: 40) %>
          <%= @user.name %>
          <a href="http://gravatar.com/emails" target="_blank">プロフィール写真を変更</a>
        </div>
        <div class = 'form-group'>
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', id: 'user_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :email %>
          <%= f.text_field :email, class: 'form-control', id: 'user_email' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :sex %>
          <%= f.select :sex, [["",""], ["女性","女性"], ["男性","男性"]], {}, class: 'form-control', id: 'user_sex' %>
        </div>
        <div class='form-group'>
          <%= f.label :check_in %>
          <%= f.text_field :check_in, class: 'form-control', id: 'check_in' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <%= link_to "アカウントを削除する", user_path(@user), method: :delete,
                                    data: { confirm: "本当にこのアカウントを削除してよろしいですか？" } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
