<div class="col-md-5">
  <div id="carousel" class="carousel slide" data-ride="carousel" >
    <div class="carousel-inner">
      <% restaurant.images.each_with_index do |image, i| %>
        <div class="item <%= 'active' if i.zero? %>" data-thumb="<%= i %>">
           <%= image_tag image.thumb200.url, class: "image-size" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="clearfix">
    <div id="thumbcarousel" class="carousel slide" data-interval="false">
      <div class="carousel-inner">
        <% restaurant.images.each_with_index do |image, i| %>
          <div data-target="#carousel" data-slide-to="<%= i %>" class="thumb">
            <%= image_tag image.thumb100.url, class: "image-size-small" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
