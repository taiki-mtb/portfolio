<div class="comment_form">
  <%= form_for(@board_comment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= hidden_field_tag :board_id, @board.id %>
    <div class="row">
      <div class="col-md-8 col-md-offset-1">
        <div class="field">
          <%= f.text_area :content, placeholder: "コメントを追加..." %>
        </div>
      </div>
      <div class="col-md-3">
        <%= f.submit "コメント", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>